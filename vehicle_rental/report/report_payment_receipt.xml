<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_payment_receipt" model="report.paperformat">
        <field name="name">Payment Receipt</field>
        <field name="default" eval="True"/>
        <field name="format">A5</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">0</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="disable_shrinking" eval="True"/>
        <field name="dpi">96</field>
    </record>

    <record id="payment_receipt" model="ir.actions.report">
        <field name="name">Payment Receipt</field>
        <field name="model">account.payment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">vehicle_rental.report_payment_receipt_with_wallpaper</field>
        <field name="report_file">vehicle_rental.report_payment_receipt_with_wallpaper</field>
        <field name="print_report_name">'Payment Receipt - %s' % object.name</field>
        <field name="binding_model_id" ref="account.model_account_payment"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="vehicle_rental.paperformat_payment_receipt"/>
    </record>

    <record id="payment_receipt_without_wallpaper" model="ir.actions.report">
        <field name="name">Payment Receipt without Wallpaper</field>
        <field name="model">account.payment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">vehicle_rental.report_payment_receipt</field>
        <field name="report_file">vehicle_rental.report_payment_receipt</field>
        <field name="print_report_name">'Payment Receipt - %s' % object.name</field>
        <field name="binding_model_id" ref="account.model_account_payment"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="vehicle_rental.paperformat_payment_receipt"/>
    </record>

    <template id="report_payment_receipt">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="vehicle_rental.report_payment_receipt_template"/>
            </t>
        </t>
    </template>

    <template id="report_payment_receipt_with_wallpaper">
        <t t-call="vehicle_rental.report_payment_receipt">
            <t t-set="print_with_wallpaper" t-value="True"/>
        </t>
    </template>

    <template id="report_payment_receipt_template">
        <t t-call="web.basic_layout">
            <div class="page">
                <div t-if="print_with_wallpaper" style="position: absolute; width: 100%;">
                    <br/>

                    <img src="/vehicle_rental/static/src/img/payment_receipt.jpg"
                         style="width: 96%"/>
                </div>

                <strong t-field="o.vehicle_contract_id.vehicle_id.license_plate"
                        style="position: absolute; margin-top: 123px; margin-left: 109px; font-size: 12px;"/>
                <strong t-field="o.date"
                        style="position: absolute; margin-top: 144px; margin-left: 538px; font-size: 12px;"/>
                <strong t-field="o.partner_id"
                        style="position: absolute; margin-top: 187px; margin-left: 121px; font-size: 12px;"/>
                <strong t-field="o.amount_total_words"
                        style="position: absolute; margin-top: 227px; margin-left: 102px; font-size: 12px;"/>

                <strong t-if="o.payment_method_line_type == 'cash'" t-esc="'✓'"
                        style="position: absolute; margin-top: 248px; margin-left: 69px; font-size: 43px;"/>
                <strong t-elif="o.payment_method_line_type == 'card'" t-esc="'✓'"
                        style="position: absolute; margin-top: 248px; margin-left: 225px; font-size: 43px;"/>
                <strong t-elif="o.payment_method_line_type == 'cheque'" t-esc="'✓'"
                        style="position: absolute; margin-top: 248px; margin-left: 423px; font-size: 43px;"/>
                <strong t-elif="o.payment_method_line_type == 'bank_transfer'" t-esc="'✓'"
                        style="position: absolute; margin-top: 248px; margin-left: 639px; font-size: 43px;"/>

                <t t-if="o.payment_method_line_type == 'cheque'">
                    <strong t-field="o.cheque_date"
                            style="position: absolute; margin-top: 306px; margin-left: 74px; font-size: 12px;"/>
                    <strong t-field="o.cheque_number"
                            style="position: absolute; margin-top: 306px; margin-left: 316px; font-size: 12px;"/>
                    <strong t-field="o.cheque_bank_id"
                            style="position: absolute; margin-top: 306px; margin-left: 567px; font-size: 12px; nowrap"/>
                </t>

                <t t-if="o.vehicle_contract_id">
                    <strong t-field="o.rent_from"
                            style="position: absolute; margin-top: 346px; margin-left: 132px; font-size: 12px;"/>
                    <strong t-field="o.rent_to"
                            style="position: absolute; margin-top: 346px; margin-left: 430px; font-size: 12px;"/>
                </t>

                <strong t-esc="int(o.amount)"
                        style="position: absolute; margin-top: 476px; margin-left: 586px; font-size: 14px;"/>
                <strong t-esc="'{:,.3f}'.format(o.amount).split('.')[1]"
                        style="position: absolute; margin-top: 476px; margin-left: 658px; font-size: 14px;"/>
            </div>
        </t>
    </template>
</odoo>
