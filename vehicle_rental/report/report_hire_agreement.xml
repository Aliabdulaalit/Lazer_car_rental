<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_hire_agreement" model="report.paperformat">
        <field name="name">Hire Agreement</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">0</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="disable_shrinking" eval="True"/>
        <field name="dpi">96</field>
    </record>

    <record id="hire_agreement" model="ir.actions.report">
        <field name="name">Hire Agreement</field>
        <field name="model">vehicle.contract</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">vehicle_rental.report_hire_agreement_with_wallpaper</field>
        <field name="report_file">vehicle_rental.report_hire_agreement_with_wallpaper</field>
        <field name="print_report_name">'Hire Agreement - %s' % object.reference_no</field>
        <field name="binding_model_id" ref="model_vehicle_contract"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="vehicle_rental.paperformat_hire_agreement"/>
    </record>

    <record id="hire_agreement_without_wallpaper" model="ir.actions.report">
        <field name="name">Hire Agreement without Wallpaper</field>
        <field name="model">vehicle.contract</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">vehicle_rental.report_hire_agreement</field>
        <field name="report_file">vehicle_rental.report_hire_agreement</field>
        <field name="print_report_name">'Hire Agreement - %s' % object.reference_no</field>
        <field name="binding_model_id" ref="model_vehicle_contract"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="vehicle_rental.paperformat_hire_agreement"/>
    </record>

    <template id="report_hire_agreement">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="vehicle_rental.report_hire_agreement_template"/>
            </t>
        </t>
    </template>

    <template id="report_hire_agreement_with_wallpaper">
        <t t-call="vehicle_rental.report_hire_agreement">
            <t t-set="print_with_wallpaper" t-value="True"/>
        </t>
    </template>

    <template id="report_hire_agreement_template">
        <t t-call="web.basic_layout">
            <div class="page">
                <div t-if="print_with_wallpaper" style="position: absolute; width: 100%;">
                    <br/>

                    <img src="/vehicle_rental/static/src/img/hire_agreement.jpg"
                         style="width: 96%"/>
                </div>

                <strong t-field="o.customer_id"
                        style="position: absolute; white-space: nowrap; margin-top: 237px; margin-left: 90px;
                               font-size: 12px;"/>
                <strong t-field="o.start_date"
                        style="position: absolute; white-space: nowrap; margin-top: 237px; margin-left: 537px;
                               font-size: 12px;"/>
                <strong t-field="o.work_name"
                        style="position: absolute; white-space: nowrap; margin-top: 265px; margin-left: 122px;
                               font-size: 12px;"/>
                <strong t-field="o.residence_address"
                        style="position: absolute; white-space: nowrap; margin-top: 292px; margin-left: 165px;
                               font-size: 12px;"/>
                <strong t-field="o.customer_phone"
                        style="position: absolute; white-space: nowrap; margin-top: 319px; margin-left: 243px;
                               font-size: 12px;"/>
                <strong t-field="o.driving_license_no"
                        style="position: absolute; white-space: nowrap; margin-top: 347px; margin-left: 165px;
                               font-size: 12px;"/>
                <strong t-field="o.issued_place"
                        style="position: absolute; white-space: nowrap; margin-top: 374px; margin-left: 126px;
                               font-size: 12px;"/>
                <strong t-field="o.expiry_date"
                        style="position: absolute; white-space: nowrap; margin-top: 402px; margin-left: 128px;
                               font-size: 12px;"/>
                <strong t-field="o.vehicle_id.model_id"
                        style="position: absolute; white-space: nowrap; margin-top: 429px; margin-left: 122px;
                               font-size: 12px;"/>
                <strong t-field="o.vehicle_id.license_plate"
                        style="position: absolute; white-space: nowrap; margin-top: 456px; margin-left: 96px;
                               font-size: 12px;"/>
                <strong t-field="o.start_date"
                        style="position: absolute; white-space: nowrap; margin-top: 484px; margin-left: 147px;
                               font-size: 12px;"/>
                <strong t-field="o.end_date"
                        style="position: absolute; white-space: nowrap; margin-top: 511px; margin-left: 136px;
                               font-size: 12px;"/>
                <strong t-if="o.if_any_deposit" t-esc="'{:,.3f}'.format(o.deposit)"
                        style="position: absolute; white-space: nowrap; margin-top: 620px; margin-left: 179px;
                               font-size: 12px;"/>

                <t t-if="o.rent_type == 'hour'">
                    <strong t-esc="int(o.amount_untaxed)"
                            style="position: absolute; white-space: nowrap; margin-top: 386px; margin-left: 583px;
                                   font-size: 14px;"/>
                    <strong t-esc="'{:,.3f}'.format(o.amount_untaxed).split('.')[1]"
                            style="position: absolute; white-space: nowrap; margin-top: 386px; margin-left: 664px;
                                   font-size: 14px;"/>
                </t>
                <t t-elif="o.rent_type == 'days'">
                    <strong t-esc="int(o.amount_untaxed)"
                            style="position: absolute; white-space: nowrap; margin-top: 417px; margin-left: 583px;
                                   font-size: 14px;"/>
                    <strong t-esc="'{:,.3f}'.format(o.amount_untaxed).split('.')[1]"
                            style="position: absolute; white-space: nowrap; margin-top: 417px; margin-left: 664px;
                                   font-size: 14px;"/>
                </t>
                <t t-elif="o.rent_type == 'week'">
                    <strong t-esc="int(o.amount_untaxed)"
                            style="position: absolute; white-space: nowrap; margin-top: 449px; margin-left: 583px;
                                   font-size: 14px;"/>
                    <strong t-esc="'{:,.3f}'.format(o.amount_untaxed).split('.')[1]"
                            style="position: absolute; white-space: nowrap; margin-top: 449px; margin-left: 664px;
                                   font-size: 14px;"/>
                </t>
                <t t-elif="o.rent_type == 'month'">
                    <strong t-esc="int(o.amount_untaxed)"
                            style="position: absolute; white-space: nowrap; margin-top: 480px; margin-left: 583px;
                                   font-size: 14px;"/>
                    <strong t-esc="'{:,.3f}'.format(o.amount_untaxed).split('.')[1]"
                            style="position: absolute; white-space: nowrap; margin-top: 480px; margin-left: 664px;
                                   font-size: 14px;"/>
                </t>

                <strong t-esc="int(o.amount_tax)"
                        style="position: absolute; white-space: nowrap; margin-top: 543px; margin-left: 583px;
                               font-size: 14px;"/>
                <strong t-esc="'{:,.3f}'.format(o.amount_tax).split('.')[1]"
                        style="position: absolute; white-space: nowrap; margin-top: 543px; margin-left: 664px;
                               font-size: 14px;"/>

                <strong t-esc="int(o.amount_untaxed + o.amount_tax)"
                        style="position: absolute; white-space: nowrap; margin-top: 574px; margin-left: 583px;
                               font-size: 14px;"/>
                <strong t-esc="'{:,.3f}'.format(o.amount_untaxed + o.amount_tax).split('.')[1]"
                        style="position: absolute; white-space: nowrap; margin-top: 574px; margin-left: 664px;
                               font-size: 14px;"/>

                <strong t-field="o.related_card_number"
                        style="position: absolute; white-space: nowrap; margin-top: 644px; margin-left: 377px;
                               font-size: 12px;"/>
                <strong t-field="o.related_card_expiration_date"
                        style="position: absolute; white-space: nowrap; margin-top: 644px; margin-left: 633px;
                               font-size: 12px;"/>
                <strong t-field="o.related_card_holder_name"
                        style="position: absolute; white-space: nowrap; margin-top: 663px; margin-left: 365px;
                               font-size: 12px;"/>
            </div>
        </t>
    </template>
</odoo>
