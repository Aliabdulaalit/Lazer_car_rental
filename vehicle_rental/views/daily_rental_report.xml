        <record id="daily_rental_report_search" model="ir.ui.view">
            <field name="name">daily.rental.report.search.view</field>
            <field name="model">vehicle.contract</field>
            <field name="arch" type="xml">
                <search>
                    <group>
                        <filter name="today" string="Today"
                                domain="[('start_date', '&gt;', (context_today() - datetime.timedelta(days=1)).strftime('%Y-%m-%d'))]"/>

<!--                        <filter name="planned_today" string="Today"-->
<!--                                domain="[('x_batch_date', '=', context_today().strftime('%Y-%m-%d'))]"/>-->


                    </group>
                </search>
            </field>
        </record>

        <record id="action_daily_rental_report" model="ir.actions.act_window">
            <field name="name">Daily Rental Report</field>
            <field name="res_model">vehicle.contract</field>
            <field name="view_id" ref="vehicle_rental.daily_rental_report"/>
            <field name="view_mode">tree</field>
            <field name="context">{'create':false}</field>
            <!--            <field name="domain">[(current_date,'=', compute_start_date)]</field>-->
            <!--            <field name="domain">[('is_equal_date', '=', True)]</field>-->
