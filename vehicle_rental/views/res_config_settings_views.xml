<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.fleet</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="90"/>
        <field name="inherit_id" ref="fleet.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='fleet']//block//setting" position="after">
                <setting string="Vehicle Expiration Dates">
                    <div class="text-muted content-group mt16">
                        <span>Number of Days Before Expiration Notification</span>
                        <field name="fleet_vehicle_expiration_notification_days" class="text-center" style="width: 10%; min-width: 4rem;"/>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
